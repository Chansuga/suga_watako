{
  "name": "Django Dev Container",
  "dockerComposeFile": ["docker-compose.yml"],
  "service": "web",
  "workspaceFolder": "/workspace",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "batisteo.vscode-django"
      ]
    }
  },
  "forwardPorts": [8000],
  "postCreateCommand": "pip install -r .devcontainer/requirements.txt",
  "remoteUser": "root"
}
